<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Trekk Enterprise</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
@if (User.IsInRole("Admin") || User.IsInRole("SuperUser") || User.IsInRole("User"))
{

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Trekk Enterprise", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Clients", "Index", "Clients")</li>
                    <li>@Html.ActionLink("Parents", "Index", "Parents")</li>
                    @*<li>@Html.ActionLink("Roles", "Index", "Role")</li>*@
                    <li>@Html.ActionLink("Enterprise Table", "Index", "Enterprises")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>            
        </div>
    </div>
}
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="background-color:#61e510;width:auto;margin:auto;text-align:center">
            <p style="font-size:19px;color:white;font-weight:bolder;">
                &copy; @DateTime.Now.Year -
                <img style="max-height:50px;max-width:120px;padding-bottom:5px;" src="~/Content/logo-trekk-white@2x.png" />
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
